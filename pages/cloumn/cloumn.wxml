<!-- 自定义顶部 -->
<view class="cu-custom" style="height:{{CustomBar}}px;">
  <view class="cu-bar fixed bg-grey" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px; ">
    <!-- <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class='cu-btn icon-my icon shadow margin-xs'> </button>
    <block wx:else>
      <navigator url='/pages/drawer/drawer' open-type='redirect' >
        <view class="cu-avatar round" style="background-image:url({{userInfo.avatarUrl}})" bindtap="showModal" data-target="viewModal"></view>
      </navigator>

    </block> -->
    <!-- 搜索框 -->
    <view class='search-form round ' style='background-color:white;padding:0 0 0 0;margin:0 0 0 10px'>
      <text class="icon-search"></text>
      <input type="text" placeholder="搜索图片、文章、视频" confirm-type="search" bindconfirm="search" class='radius'></input>
    </view>
  </view>
  <!-- 进度条加载 -->
  <view class='load-progress {{loadProgress!=0?"show":"hide"}}' style="top:{{CustomBar}}px;">
    <view class='load-progress-bar bg-green' style="transform: translate3d(-{{100-loadProgress}}%, 0px, 0px);"></view>
    <view class='load-progress-spinner text-green'></view>
  </view>
</view>

<view >
  <scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}" wx:if="{{!searching}}">
    <block>
      <view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{techcloumn}}" wx:key bindtap='tabSelect' data-id="{{index}}">
        {{item}}
      </view>
    </block>

  </scroll-view>
  <view wx:else>{{moto}}</view>
</view>


<view class='navg'>

  <view class='grid col-1'>
    <view class='shine'></view>

    <view>
      <navigator url='/pages/cloumn/cloumn' open-type='redirect'>
        <view class='classify'></view>
      </navigator>
    </view>

    <view>
      <navigator url='/pages/timeline/timeline' open-type='redirect'>
        <view class='toggle'></view>
      </navigator>
    </view>

    <view>
      <navigator url='/pages/drawer/drawer' open-type='redirect'>
        <view class='person'></view>
      </navigator>
    </view>
      <view>
        <navigator open-type='navigateBack'>
          <view class='round-click'></view>
        </navigator>
      </view>
  </view>
</view>

